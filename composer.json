{
    "name": "micro/plugin-console",
    "description": "Micro Framework: Console application component",
    "license": "MIT",
    "type": "micro-plugin",
    "authors": [
        {
            "name": "Stanislau.Komar",
            "email": "stanislau_komar@epam.com"
        }
    ],
    "require": {
        "micro/kernel-app": "^2.0",
        "micro/kernel-boot-dependency": "^2.0",
        "micro/plugin-locator": "^2.0",
        "symfony/console": "^6.0"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.29",
        "friendsofphp/php-cs-fixer": "^3.13",
        "phpstan/phpstan": "^1.9",
        "phpunit/php-code-coverage": "^9.2",
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^5.2"
    },
    "autoload": {
        "psr-4": {
            "Micro\\Plugin\\Console\\": "/"
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        },
        "sort-packages": true
    },
    "minimum-stability": "dev"
}
